@model VLN2.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3 class="white-color">Projects</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.UserProjects)
                    {
                        <tr>
                            <td>@project.Name</td>
                            <td>@project.Description</td>
                            <td>@Html.ActionLink("Open Project", "Index", "Project", new { id = project.ID }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4 container-top-margin">
            <button class="btn" type="submit">Create New Project</button>
        </div>
    </div>
</div>
@model VLN2.ViewModels.ProjectViewModel
@{
    ViewBag.Title = @Model.Project.Name;
}

@section outsideContainer{
    <div class="sidebar-info" id="sidebar">
        
        <div class="project-info">
            <h2 class="project-title">@Model.Project.Name</h2>
        </div>

        <div class="project-files">
            <h5>FILES</h5>
            <ul id="files">
                @foreach (var file in Model.Project.ProjectFiles)
                {
                    <li class="file" data-fileid="@file.ID">
                        @file.Name
                    </li>
                }
            </ul>
        </div>
        <div class="project-actions">
            <div class="action-add-file">
                <span class="glyphicon glyphicon-plus"></span>
            </div>
            <form class="form-inline" id="createfile">
                <h4>New File:</h4>
                <input id="newfile" type="text" placeholder="filename" class="form-control"/>
                <button class="btn btn-flat" type="submit">
                    <span class="glyphicon glyphicon-plus"></span>
                </button>
            </form>
        </div>

        <div class="project-conversation">
            <ol class="project-conversation-messages" id="discussion"></ol>
            <form id="sendmessage" class="project-conversation-input">
                <div class="input-group">
                    <input type="text" class="form-control" id="message" placeholder="Message" autocomplete="off">
                    <span class="input-group-btn">
                        <button class="btn btn-send" type="submit">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    <div id="dragbar"></div>
    <div id="editor" class="editor"></div>
}

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <script src="~/Scripts/src-min-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>

    <!--SignalR script to update the chat page and send messages.-->
    <script src="~/Scripts/Hubs/chat.js"></script>
    <script src="~/Scripts/Hubs/code.js"></script>
    <script src="~/Scripts/app.js"></script>
}
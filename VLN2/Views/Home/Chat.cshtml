
@{
    ViewBag.Title = "Chat";
}

@section outsideContainer{
    <div class="sidebar">
        <div class="sidebar-project">
            Files here
        </div>
        <div class="sidebar-chat">
            <form class="form-inline" id="sendmessage">
                <input type="text" class="form-control" id="message" placeholder="Your Message" autocomplete="off">
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
            <ul id="discussion"></ul>
        </div>
    </div>
    <div id="editor"></div>
}

@section styles {
    <style>
        body{
            padding-bottom: 0;
        }
        #editor{
            width: auto;
            overflow: hidden;
            position: absolute;
            left: 250px;
            right:0;
            top: 50px;
            bottom: 0;
        }
        .sidebar{
            width: 250px;
            float: left;
        }
        .sidebar-project{
            width: 250px;
            position: absolute;
            top: 50px;
            bottom: 180px;
            background-color: blue;
        }
        .sidebar-chat{
            width: 250px;
            position: absolute;
            bottom: 0;
            height: 180px;
            background-color: red;
            font-family: 'Roboto', sans-serif;
        }
    </style>
}

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    
    <script src="~/Scripts/src-min-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>

    <!--SignalR script to update the chat page and send messages.-->
    <script src="~/Scripts/Hubs/chat.js"></script>
    <script src="~/Scripts/Hubs/code.js"></script>
}
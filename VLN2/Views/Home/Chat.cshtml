
@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>

<span id="number-of-users-connected">Users Connected: </span>

<div class="container">
    <form class="form-inline" id="sendmessage">
        <input type="text" class="form-control" id="message" placeholder="Your Message" autocomplete="off">
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
    <ul id="discussion"></ul>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script src="~/Scripts/Hubs/chat.js"></script>
}